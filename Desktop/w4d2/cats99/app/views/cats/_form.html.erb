  <% if action == :edit 
      action_url = cat_url(@cat)
    else
      action_url = cats_url
    end
  %>
  


<form class="" action="<%= action_url %>" method="post" >
  <% if action == :edit %>
   <input type="hidden" name="_method" value="PATCH">
   <% end %>
  
  <label for="name">Name: </label>
  <input id ="name" type="text" name="cat[name]" value="<%=@cat.name%>">
  <br>
  
  <label for="birth_date">Birth Date: </label>
  <input id ="birth_date" type="date" name="cat[birth_date]" value="<%=@cat.birth_date%>" >
  <br>
  
  <label for="sex">Sex: </label>
  <input id ="sex" type="radio" name="cat[sex]" value="M" <%= @cat.sex == "M" ? "checked" : "" %>>M
  <input id ="sex" type="radio" name="cat[sex]" value="F" <%= @cat.sex == "F" ? "checked" : "" %>>F
  <br>

  <label for="description"> Description: </label>
  <input id ="description" type="text" name="cat[description]" value=" <%=@cat.description%> ">
  <br>
  
  <label for="color">Color: </label>
  <select id ="color" name="cat[color]">
    <% Cat::COLORS.each do |color| %>
    <option value="<%= color %>" <%= @cat.color == color ? "selected" : "" %>> <%= color %></option>
    <% end %>
  </select>

  <br>
  <input type="submit" value="<%= action == :edit ? "Update Kitty" : "Create Kitty"%>">
</form>
